@model BloodDonation.Web.Models.ViewModels.CreateHospitalViewModel

@{
    ViewData["Title"] = "Add New Hospital";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">üè• Add New Hospital</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <h5 class="text-secondary border-bottom pb-2 mb-3">Hospital Details</h5>
                        
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ex: Al-Amal Hospital" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Address" class="control-label fw-bold"></label>
                            <input asp-for="Address" class="form-control" placeholder="City, Street Name" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Phone" class="control-label fw-bold"></label>
                            <input asp-for="Phone" class="form-control" placeholder="079xxxxxxx" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>

                        <h5 class="text-secondary border-bottom pb-2 mb-3 mt-4">Login Credentials</h5>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="hospital@bloodbank.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Password" class="control-label fw-bold"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConfirmPassword" class="control-label fw-bold"></label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-plus-circle"></i> Create Hospital
                            </button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}